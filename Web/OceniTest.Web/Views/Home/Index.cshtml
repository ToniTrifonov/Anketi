@using OceniTest.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (this.User.Identity.IsAuthenticated)
{
    <div class="text-center"><a class="btn btn-primary" asp-controller="Quizzes" asp-action="Create">Create a survey</a></div>

    <div class="text-center"><a class="btn btn-primary" asp-controller="Quizzes" asp-action="All">All surveys</a></div>
}

